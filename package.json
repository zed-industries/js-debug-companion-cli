{
  "name": "@zed-industries/js-debug-companion-cli",
  "displayName": "JavaScript Debugger Companion CLI",
  "description": "Companion CLI for js-debug for remote browser debugging",
  "version": "0.1.0",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zed-industries/js-debug-companion-cli"
  },
  "license": "MIT",
  "homepage": "https://github.com/zed-industries/js-debug-companion-cli#readme",
  "main": "./out/cli.js",
  "scripts": {
    "prepublish": "rimraf out && node .esbuild.js --minify",
    "compile": "node .esbuild.js --minify",
    "cli": "npm run compile && node out/cli.js",
    "watch": "node .esbuild.js --watch",
    "test": "tsc --noEmit && npm run test:lint && mocha && npm run test:fmt",
    "test:lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "test:fmt": "prettier --list-different \"src/**/*.ts\" \"test/**/*.ts\"",
    "fmt": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" && npm run test:lint -- --fix"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@types/duplexer3": "^0.1.4",
    "@types/eslint__js": "^8.42.3",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.9",
    "@types/split2": "^4.2.3",
    "@types/ws": "^8.5.10",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.0",
    "mocha": "^11.7.3",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "tsx": "^4.20.6",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0"
  },
  "dependencies": {
    "@vscode/js-debug-browsers": "^1.1.2",
    "duplexer3": "^1.0.0",
    "execa": "^5.1.1",
    "split2": "^4.2.0",
    "ws": "^8.17.1"
  }
}
